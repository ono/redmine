<% if issues && issues.any? %>
<% form_tag({}) do %>
	<table class="list issues">
		<thead><tr>
		<th>#</th>
		<th>What to do</th>
		<th><%=l(:field_due_date)%></th>
		<th><%=l(:field_assigned_to)%></th>
		<th><%=l(:field_tracker)%></th>
		<th><%=l(:field_subject)%></th>
		</tr></thead>
		<tbody>
		<% for issue in issues %>
		<tr id="issue-<%= issue.id %>" class="hascontextmenu <%= cycle('odd', 'even') %> <%= css_issue_classes(issue) %>">
			<td class="id">
				<%= check_box_tag("ids[]", issue.id, false, :style => 'display:none;') %>
				<%= link_to issue.id, :controller => 'issues', :action => 'show', :id => issue %>
			<td>
				<% if issue.priority_id==7 %><font color="red">Emergency</font>
				<% elsif !issue.assigned_to %>Assign to a project member
				<% elsif issue.due_date && issue.due_date < Date.today %>Kick the assignee (Overdue issue)
				<% elsif !issue.due_date && !issue.fixed_version_id %>Set <font color="red">Due date</font> or <font color="red">Target version</font>
				<% elsif issue.fixed_version && !issue.fixed_version.effective_date %>Set <font color="red">Due date</font> to Version <%= issue.fixed_version.name %></font>
				<% elsif issue.fixed_version && issue.fixed_version.effective_date && issue.fixed_version.effective_date < Date.today %>Kick the assignee (Overdue version <font color="red"><%= issue.fixed_version.name %></font>)
				<% else %>Unknown
				<% end %>
			</td>
			<td>
				<% if issue.due_date %>
					<% if issue.due_date < Date.today %>
						<font color="red"><%= issue.due_date %></font>
					<% else %>
						<%= issue.due_date %>
					<% end %>
				<% else %>
					 -
				<% end %>
				</td>
			<td>
			<% if issue.assigned_to %>
				<%= issue.assigned_to.name %>
			<% else %>
				<font color="red">Not assigned</font>
			<% end %>
			</td>
			<td><%=h issue.project.name %> - <%= issue.tracker.name %><br />
								<%= issue.status.name %> - <%= format_time(issue.updated_on) %></td>
			<td class="subject">
								<%= link_to h(issue.subject), :controller => 'issues', :action => 'show', :id => issue %>
						</td>
		</tr>
		<% end %>
		</tbody>
	</table>
<% end %>
<% else %>
	<p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
